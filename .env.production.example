# Production Environment Variables for Docker Compose
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/autocontrol-prod?retryWrites=true&w=majority

# For local MongoDB in Docker (alternative to MongoDB Atlas)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-super-secure-root-password
MONGO_APP_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-minimum-32-characters-long

# Email Configuration
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@autocontrolpro.com

# Frontend Configuration
FRONTEND_URL=https://autocontrolpro.com
CORS_ORIGINS=https://autocontrolpro.com,https://www.autocontrolpro.com,https://api.autocontrolpro.com

# Redis Configuration (optional)
REDIS_PASSWORD=your-redis-password

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS_COLLECTION=true

# Monitoring & Analytics Configuration
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
MONITORING_INTERVAL=60000
ANALYTICS_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=30

# Performance Configuration
ENABLE_COMPRESSION=true
MAX_FILE_SIZE=10485760