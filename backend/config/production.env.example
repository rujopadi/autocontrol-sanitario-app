# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application Settings
NODE_ENV=production
PORT=5000
APP_NAME="Autocontrol Sanitario Pro"
APP_VERSION=1.0.0

# MongoDB Atlas Configuration
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/autocontrol-prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-characters
JWT_REFRESH_EXPIRE=7d

# Email Service Configuration (SendGrid)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@autocontrolpro.com
EMAIL_FROM_NAME="Autocontrol Sanitario Pro"

# Alternative Email Configuration (SMTP)
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend Configuration
FRONTEND_URL=https://autocontrolpro.com
CORS_ORIGINS=https://autocontrolpro.com,https://www.autocontrolpro.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_COOKIE_MAX_AGE=86400000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Third-party Integrations
# Add your third-party service configurations here
# ANALYTICS_API_KEY=
# MONITORING_API_KEY=
# PAYMENT_GATEWAY_KEY=