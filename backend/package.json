
{
  "name": "autocontrol-pro-backend",
  "version": "1.0.0",
  "description": "Backend for Autocontrol Sanitario Pro",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:direct": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "server": "nodemon server.js",
    "migrate": "node scripts/migrate-to-multitenant.js",
    "migrate:rollback": "node scripts/migrate-to-multitenant.js rollback",
    "setup:db": "node scripts/setup-database.js",
    "backup:create": "node scripts/backup-database.js create",
    "backup:list": "node scripts/backup-database.js list",
    "backup:cleanup": "node scripts/backup-database.js cleanup",
    "deploy:prod": "node scripts/deploy-production.js",
    "security:harden": "node scripts/security-hardening.js",
    "security:monitor": "node scripts/security-monitor.js",
    "security:scan": "npm run audit:security && npm run security:harden",
    "health:check": "curl -f http://localhost:5000/health || exit 1",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "install:deps": "npm install",
    "audit:security": "npm audit --audit-level moderate",
    "test": "node scripts/run-comprehensive-tests.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --coverage",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:security": "cross-env NODE_ENV=test jest tests/security",
    "test:e2e": "cross-env NODE_ENV=test jest tests/e2e",
    "test:performance": "cross-env NODE_ENV=test jest tests/performance",
    "test:all": "node scripts/run-comprehensive-tests.js",
    "test:debug": "cross-env NODE_ENV=test jest --verbose --no-cache",
    "test:setup": "node -e \"console.log('Test environment configured successfully')\"",
    "test:clean": "cross-env NODE_ENV=test jest --clearCache",
    "monitoring:setup": "node scripts/setup-monitoring.js",
    "monitoring:dashboard": "echo \"Dashboard disponible en: http://localhost:5000/monitoring\"",
    "setup:production": "node scripts/setup-production-infrastructure.js",
    "setup:production-db": "node scripts/setup-production-db.js",
    "setup:db-monitoring": "node scripts/setup-db-monitoring.js",
    "setup:backups": "node scripts/setup-automated-backups.js",
    "optimize:connections": "node scripts/optimize-connection-pooling.js",
    "infrastructure:setup": "node scripts/setup-production-infrastructure.js",
    "infrastructure:validate": "node scripts/setup-production-infrastructure.js --validate-only",
    "deploy:setup": "node scripts/setup-production-deployment.js",
    "deploy:environment": "node scripts/setup-production-environment.js",
    "deploy:logging": "node scripts/setup-logging-aggregation.js",
    "deploy:health": "node scripts/setup-health-checks.js",
    "deploy:complete": "npm run infrastructure:setup && npm run deploy:setup"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5",
    "mongodb-memory-server": "^9.1.1",
    "cross-env": "^7.0.3"
  }
}
