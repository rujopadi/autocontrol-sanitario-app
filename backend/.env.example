# Variables de entorno para el backend
# Copia este archivo a .env y configura los valores

# Base de datos MongoDB
MONGO_URI=mongodb://localhost:27017/autocontrol-sanitario-saas
# Para MongoDB Atlas (producción):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/autocontrol-sanitario-saas

# JWT Secrets (genera unos seguros para producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_min_32_caracteres
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_diferente_y_seguro
JWT_EXPIRE=7d

# Puerto del servidor
PORT=5000

# Entorno
NODE_ENV=development

# Email Service (para verificación y reset de contraseña)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=tu_sendgrid_api_key
EMAIL_FROM=noreply@tudominio.com
EMAIL_FROM_NAME=Autocontrol Sanitario Pro

# URLs del frontend (para emails y CORS)
FRONTEND_URL=http://localhost:5173
FRONTEND_PROD_URL=https://tudominio.com

# IPs de confianza (opcional, separadas por comas)
TRUSTED_IPS=127.0.0.1,::1

# Configuración de archivos
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_muy_seguro

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de base de datos
DB_POOL_SIZE=10
DB_TIMEOUT_MS=5000